{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node", "diff-match-patch"],
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "#preload": ["../preload/src/index"],
      "/@/*": ["./src/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../../node_modules/**/*.d.ts",
    "../../node_modules/**/*.vue",
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
